<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

  <ImageView
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:background="@color/color2"
      android:adjustViewBounds="true"
      android:layout_weight="0.6"
      android:id="@+id/prevImage"
      android:scaleType="fitXY"

      />

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:paddingLeft="@dimen/activity_horizontal_margin"
      android:paddingRight="@dimen/activity_horizontal_margin"
      android:paddingTop="@dimen/activity_vertical_margin"
      android:paddingBottom="@dimen/activity_vertical_margin"
      android:orientation="vertical"
      android:background="@color/color5"
      android:adjustViewBounds="true"
      android:layout_weight="0.4"

      >


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/prevEmail"
        android:drawableLeft="@drawable/ic_email_black_24dp"
        android:drawableStart="@drawable/ic_email_black_24dp"
        android:drawablePadding="@dimen/text_fields_label_padding_between_label_and_icon"
        android:gravity="center|start"
        android:layout_marginTop="@dimen/text_field_margin"
        android:layout_marginBottom="@dimen/text_field_margin"
        android:text="email@yandex.ru"
        android:drawableTint="@color/color4"


        />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/prevPhone"
        android:gravity="center|start"
        android:drawableLeft="@drawable/ic_phone_black_24dp"
        android:drawableStart="@drawable/ic_phone_black_24dp"
        android:drawablePadding="@dimen/text_fields_label_padding_between_label_and_icon"
        android:layout_marginTop="@dimen/text_field_margin"
        android:layout_marginBottom="@dimen/text_field_margin"
        android:drawableTint="@color/color4"
        android:text="8-951-2123"
        >

    </TextView>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/prevPassw"
        android:gravity="center|start"
        android:drawableLeft="@drawable/ic_build_black_24dp"
        android:drawableStart="@drawable/ic_build_black_24dp"
        android:drawablePadding="@dimen/text_fields_label_padding_between_label_and_icon"
        android:layout_marginTop="@dimen/text_field_margin"
        android:layout_marginBottom="@dimen/text_field_margin"
        android:drawableTint="@color/color4"
        android:text="passswww123"


        />


  </LinearLayout>


  <Button
      android:text="@string/button_send"
      android:id="@+id/buttonSend"
      style="@style/MyButtonStyle"
      />
</LinearLayout>

